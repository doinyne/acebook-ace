<p id="notice"><%= notice %></p>

<p>
  <%=image_tag(@post_image.user.image, height: '100', width: '100')%>
</p>

<p>
  <%= @post_image.user.email %>
</p> 

<p>
  <strong>Title:</strong>
  <%= @post_image.title %>
</p>

<p>
  <strong>Caption:</strong>
  <%= @post_image.content %>
</p>

<p>
  <% if @post_image.image.attached? %>
    <%= image_tag @post_image.image %>
  <% end %>
</p>

<%= link_to 'Edit', edit_post_image_path(@post_image) %> |
<%= link_to 'Back', post_images_path %>

<h2>Comments</h2>
<%= render @post_image.comments%>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>
